<%= content_for :title, "ADMIN"%>

<%= render 'shared/h1_title', title:"#{@user.name}" %>

<section class="container-fluid">
    <div class="card border-0">
        <div class="row g-0 px-5">
        <% if @user.profile_picture.present?%>
            <div class="col-md-6">
                <div class="container-fluid">
                    <%= image_tag @user.profile_picture, 
                        class:"img-fluid me-auto", 
                        # style:"max-height:300px;", 
                        alt:"Img not available"%>
                </div>
            </div>
        <%end%>
            <div class="col-md-6 mx-auto">
                <div class="card-body ms-0">
                    <p class="card-text">
                        ID: <%= @user.id %>
                    </p>
                    <p class="card-text">
                        Admin: <%= @user.admin %>
                    </p>
                    <p class="card-text">
                        Email: <%= @user.email %>
                    </p>
                    <p class="card-text">
                        Registered: <%= @user&.created_at.strftime("%d/%m/%Y %H:%M")%>
                    </p>
                    <p class="card-text">
                        Bio: <%= @user.bio %>
                    </p> 
                    <p class="card-text">
                        <%= link_to "Applies", admin_user_applications_path(@user), class:"btn btn-outline-primary"%>
                    </p> 
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-center gap-2">
                        <%= link_to "Edit", edit_admin_user_path(@user), class:"btn btn-primary" %>
                        <%= button_to "Delete", admin_user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class:"btn btn-danger" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>