<h1 class="display-3 text-center">Personalize your profile</h1>

<section class="d-flex justify-content-center my-3">
<div class="col-10 col-md-6"> 
<%= form_with(model:@user) do |f| %>

  <div class="mb-3">
    <%= f.label :email, class:"form-label"%>
    <%= f.email_field :email, class:"form-control disabled", autofocus: true, disabled: true, autocomplete: "email" %>
  </div>

  <div class="mb-3">
    <%= f.label :name, class:"form-label"%>
    <%= f.text_field :name, class:"form-control", autofocus: true, autocomplete: "name" %>
  </div>

  <div class="mb-3">
    <%= f.label :bio, class:"form-label"%>
    <%= f.text_area :bio, class:"form-control", autofocus: true, autocomplete: "bio" %>
  </div>

  <div class="mb-3">
    <%= f.label :profile_picture, class:"form-label"%>
    <%= f.file_field :profile_picture, class:"form-control"%>
  </div>

  <div class="mb-3">
    <%= f.label :password, "New password", class:"form-label" %> 
    <small>(leave blank if you don't want to change it)</small>
    <%= f.password_field :password, class:"form-control", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class:"form-label" %><br />
    <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, class:"form-label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <div class="mt-3 d-flex justify-content-evenly gap-3">
    <%= f.submit "Update", class:"btn btn-outline-primary" %>
    <%= link_to "Back", :back, class:"btn btn-outline-secondary" %>
  </div>

<% end %>
</div>
</section>


