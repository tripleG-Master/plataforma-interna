<%= content_for :title, "My applies" %>
<%= render "shared/h1_title", title: "All my applies"%>

<section class="container-fluid">
<% @applications.each do |application| %>
<div class="d-flex justify-content-center border-bottom rounded-5 shadow-lg mb-3">
    <div class="col-10 col-md-6">
        <%= link_to joboffer_path(application.joboffer_id) do%>
        <div class="card border-0">
            <div class="card-body">
                <h5 class="card-title">
                    <%= application.joboffer.title %>
                </h5>
                <p class="card-text">
                    <%= application.joboffer.description %>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        Application date: <%= application.created_at.strftime("%d/%m/%Y %H:%M")%>
                    </small>
                </p>          
            </div>
        </div>
        <%end%>
    </div>
</div>
<%end%>

</section>
